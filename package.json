{
  "name": "orbit-labs",
  "version": "1.0.0",
  "description": "A production-ready, type-safe utility library for form validation and common operations",
  "author": "orbitex-lab",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --ignore-pattern src/examples",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "keywords": [
    "form-validation",
    "zod",
    "typescript",
    "type-safe",
    "utilities",
    "validation",
    "file-size",
    "scalable",
    "production-ready"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./common": {
      "types": "./dist/common/index.d.ts",
      "import": "./dist/common/index.js",
      "default": "./dist/common/index.js"
    },
    "./form": {
      "types": "./dist/form/index.d.ts",
      "import": "./dist/form/index.js",
      "default": "./dist/form/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js",
      "default": "./dist/constants/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "common": [
        "./dist/common/index.d.ts"
      ],
      "form": [
        "./dist/form/index.d.ts"
      ],
      "types": [
        "./dist/types/index.d.ts"
      ],
      "utils": [
        "./dist/utils/index.d.ts"
      ],
      "constants": [
        "./dist/constants/index.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbitex-lab/orbit-labs.git"
  },
  "bugs": {
    "url": "https://github.com/orbitex-lab/orbit-labs/issues"
  },
  "homepage": "https://github.com/orbitex-lab/orbit-labs#readme"
}
